<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.fiap.controledesaude2sis.ControleActivity"
    android:columnCount="3"
    android:useDefaultMargins="true">

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="right"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeTextView"
        android:padding="12dp"
        android:elevation="5dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:background="#3854c7de"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:text="Gênero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:gravity="right"
        android:layout_gravity="right|center_vertical" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/grupoGenero">

        <RadioButton
            android:text="Feminino"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/femininoRadioButton"
            android:padding="12dp"
            android:checked="true"
            android:gravity="center_vertical|center_horizontal|start" />

        <RadioButton
            android:text="Masculino"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/masculinoRadioButton"
            android:padding="12dp"
            android:gravity="center_vertical|center_horizontal|start" />
    </RadioGroup>

    <TextView
        android:text="Peso Atual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="right" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/pesoAtualEditText"
        android:hint="Informe seu peso em quilos"
        android:elevation="5dp"
        android:background="#3854c7de"
        android:padding="12dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:text="Altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_gravity="right" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/alturaEditText"
        android:hint="Informe sua altura em metros"
        android:padding="12dp"
        android:elevation="5dp"
        android:background="#3854c7de"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:text="Peso Ideal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pesoIdealTextView"
        android:padding="12dp"
        android:elevation="5dp"
        android:background="#3854c7de"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:text="IMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imcTextView"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:padding="12dp"
        android:background="#3854c7de"
        android:elevation="5dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:text="Situação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/situacaoTextView"
        android:padding="12dp"
        android:elevation="5dp"
        android:background="#3854c7de"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_vertical|center_horizontal" />

</GridLayout>
